<%- include("partials/header") -%>
    <h1>Compose</h1>

    <form action="/compose" method="POST">
        <div class="mb-3">
            <label for="formGroupExampleInput" class="form-label">Title</label>
            <input type="text" class="form-control" id="formGroupExampleInput" name="postTitle">
        </div>

        <div class=" mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">Post</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" name="postBody" rows="5"
                cols="30"></textarea>
        </div><br>

        <button type="submit" class="btn btn-primary">Publish</button>
    </form>

    <%- include("partials/footer") -%>