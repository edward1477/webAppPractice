<%- include("partials/header") -%>

    <h1>Home</h1>

    <p>
        <%= homeStartingContent %>
    </p>

    <form action="/compose" method="GET">
        <button type="submit" class="btn btn-primary">Compose</button>
    </form>

    <% posts.forEach(function(post) { %>
        <h1>
            <%= post.title %>
        </h1>
        <p>
            <%= post.content.substring(0, 100) + " ... " %><a href="/posts/<%= post.title %>">Read More</a>
        </p>
        <% }); %>

            <%- include("partials/footer") -%>